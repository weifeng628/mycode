    <content><![CDATA[api.addEventListener({
    name:'${1:viewdisappear}'
}, function(ret, err){        
   if( ret ){
        alert( JSON.stringify( ret ) );
    }else{
        alert( JSON.stringify( err ) );
    }
});
]]></content>
